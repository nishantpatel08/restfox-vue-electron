{
    "name": "RestSpark CORS Helper",
    "description": "Help bypass CORS when making requests from RestSpark",
    "version": "1.0.9",
    "manifest_version": 3,
    "icons": {
        "512": "icons/favicon.png"
    },
    "permissions": [
        "scripting",
        "storage",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "512": "icons/favicon-disabled.png"
        }
    }
}
